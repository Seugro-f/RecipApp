<Label>
    size_hint: 0.3, 0.1
    canvas.before:
        Color:
            rgba: 1,0.2638,0.2638,1
        Rectangle:
            pos: self.pos
            size: self.size

<TextInput>
    size_hint: 0.6, 0.1
    font_size: 24
    font_name: 'arial'
    multiline: False
    padding: [10, (self.height-self.line_height)/2]

<Button>
    size_hint: 0.6, 0.1
    allow_stretch: False
    background_disabled_normal: "newlogBtn.png"



WindowManager:
    MainScreen:
    NewUserScreen:
    LoginScreen:
    RecipeScreen:


<MainScreen>
    name: "mainScreen"

    # Changes the background color of the window
    canvas:
        Color:
            rgba: 1,0.2638,0.2638,1
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        text: "Wisk"
        font_size: 60
        font_name: 'ariblk'
        pos_hint: {'x': 0.34, 'y': 0.63}

    Label:
        text: "Wanna share your scrumptious\nrecipes with your amiogs?\nJoin wisk now!"
        font_size: 14
        font_name: 'arial'
        pos_hint: {'x': 0.34, 'y': 0.5}
        halign: 'center'

    Button:
        # Gives the button the background image inside ''
        background_normal: 'mainBtn1.png'
        pos_hint: {'x': 0.2, 'y':0.36}
        text: "Sign In"
        color: 1,0.2638,0.2638,1
        on_release:
            app.root.current = "loginmain"

    Button:
        # Gives the button the background image inside ''
        background_normal: 'mainBtn2.png'
        pos_hint: {'x': 0.2, 'y': 0.23}
        text: "Create an Account"
        on_release:
            app.root.current = "newuser"

<NewUserScreen>:
    newUser: newUser
    newPass: newPass
    name: "newuser"

    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos


    FloatLayout:

        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            color: 0,0,0,1
            text: "Create Account"
            font_size: 50
            font_name: 'ariblk'
            pos_hint: {'x': 0.34, 'y': 0.75}

        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "After signing in you can start\nsharing your recipes"
            color: 0,0,0,1
            font_size: 14
            font_name: 'arial'
            pos_hint: {'x': 0.34, 'y': 0.65}
            halign: 'center'

        TextInput:
            pos_hint: {'x': 0.2, 'y':0.52}
            id: newUser
            hint_text: "Username"

        TextInput:
            pos_hint: {'x': 0.2, 'y':0.4}
            id: newPass
            hint_text: "Password"
            # Hides the password shown on window
            password: True

        Button:
            text: "Create Account"
            # Gives the button the background image inside ''
            background_normal: "newlogBtn.png"
            pos_hint: {'x':0.2, 'y': 0.25}
            # disables button if nothing is written on username or password text input widgets
            disabled: not newUser.text or not newPass.text
            on_release:
                #Changes current window depending on btnNewUser returned logic
                app.root.current = "newuser" if root.btnNewUser() else "loginmain"
                root.manager.transition.direction = "left"

<LoginScreen>:
    userN: usrname
    passW: password
    name: "loginmain"

    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:

        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            color: 0,0,0,1
            text: "Log In"
            font_size: 50
            font_name: 'ariblk'
            pos_hint: {'x': 0.34, 'y': 0.75}

        Label:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "After signing in you can start\nsharing your recipes"
            color: 0,0,0,1
            font_size: 14
            font_name: 'arial'
            pos_hint: {'x': 0.34, 'y': 0.65}
            halign: 'center'

        TextInput:
            pos_hint: {'x': 0.2, 'y':0.52}
            id: usrname
            hint_text: "Username"

        TextInput:
            pos_hint: {'x': 0.2, 'y':0.4}
            id: password
            hint_text: "Password"
            # Hides the password shown on window
            password: True

        Button:
            text: "Sign In"
            # Gives the button the background image inside ''
            background_normal: "newlogBtn.png"
            pos_hint: {'x':0.2, 'y': 0.25}
            # disables button if nothing is written on username or password text input widgets
            disabled: not usrname.text or not password.text
            on_release:
                #Changes current window depending on btnNewUser returned logic
                app.root.current = "recipes" if root.btnSubmit() else "loginmain"
                root.manager.transition.direction = "left"
                usrname.text = ""
                password.text = ""

<RecipeScreen>:
    name: "recipes"

    Button:
        text: "Go back"
        on_release:
            app.root.current = "loginmain"
            root.manager.transition.direction = "right"